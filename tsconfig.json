{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "preact/*": ["./stub/empty.d.ts"]
    }
  },
  "include": ["/**/*.ts", "/**/*.d.ts", "/**/*.tsx", "/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
